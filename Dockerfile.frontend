
FROM node:20-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json ./
RUN npm ci

# Copy the rest of the frontend code
COPY . .

# Build the React app
RUN npm run build

# Make sure vite.config.ts settings are applied
ENV HOST=0.0.0.0
ENV PORT=8080

# Expose frontend port
EXPOSE 8080

# Start frontend using vite preview with explicit host binding
CMD ["npm", "run", "preview", "--", "--port", "8080", "--host", "0.0.0.0"]
