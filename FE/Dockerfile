# --- Build Stage ---
FROM node:18-alpine AS builder
WORKDIR /app

# Install deps first (better caching)
COPY package*.json ./
RUN npm ci

# Copy all files
COPY . .

# Build the Vite app (this will generate version.json in dist folder)
RUN npm run build

# --- Runtime Stage ---
FROM node:18-alpine
WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001

# Install serve (for static hosting) - globally for all users
RUN npm install -g serve

# Create necessary directories with proper permissions
RUN mkdir -p /app/ssl /app/dist /app/config /app/data /app/logs && \
    chown -R nextjs:nodejs /app

# Copy dist build from builder (includes version.json generated by Vite)
COPY --from=builder --chown=nextjs:nodejs /app/dist ./dist

# Copy version.json to multiple locations for flexibility
COPY --from=builder --chown=nextjs:nodejs /app/dist/version.json ./dist/version.json
COPY --from=builder --chown=nextjs:nodejs /app/dist/version.json ./config/version.json

# If you have a version.json in your repo root, copy that too
# COPY --chown=nextjs:nodejs ./version.json ./config/version.json

# Switch to non-root user
USER nextjs

# Configurable port with default 8080
ENV PORT=8080

# SSL/TLS Configuration (optional)
ENV SSL_ENABLED=false
ENV SSL_CERT_PATH=/app/ssl/cert.pem
ENV SSL_KEY_PATH=/app/ssl/key.pem
ENV SSL_PORT=8443

# Expose both HTTP and HTTPS ports
EXPOSE ${PORT}
EXPOSE ${SSL_PORT}

# Create volume mount points
VOLUME ["/app/ssl", "/app/config", "/app/data", "/app/logs"]

# Create startup script that handles SSL logic
COPY --chown=nextjs:nodejs <<'EOF' /app/start.sh
#!/bin/sh

echo "=== Container Startup ==="
echo "SSL_ENABLED: $SSL_ENABLED"
echo "PORT: $PORT"
echo "SSL_PORT: $SSL_PORT"

# Display version information if available
if [ -f "./public/version.json" ]; then
    echo "=== Version Information ==="
    cat ./dist/version.json
    echo ""
fi

if [ "$SSL_ENABLED" = "true" ]; then
  # Check if SSL certificates exist
  if [ -f "$SSL_CERT_PATH" ] && [ -f "$SSL_KEY_PATH" ]; then
    echo "Starting HTTPS server on port $SSL_PORT and HTTP server on port $PORT"
    
    # Start HTTP server in background
    serve -s dist -l $PORT &
    
    # Start HTTPS server in foreground
    serve -s dist -l $SSL_PORT --ssl-cert "$SSL_CERT_PATH" --ssl-key "$SSL_KEY_PATH"
  else
    echo "SSL enabled but certificates not found. Starting HTTP only on port $PORT"
    serve -s dist -l $PORT
  fi
else
  echo "Starting HTTP server on port $PORT"
  serve -s dist -l $PORT
fi
EOF

# Make the script executable
RUN chmod +x /app/start.sh

# Health check to ensure the service is running
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:${PORT}/version.json || exit 1

# Use the startup script
CMD ["/app/start.sh"]