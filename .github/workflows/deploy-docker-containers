name: Build and Push Docker Images

on:
  push:
    branches:
      - main   # runs when code is merged/pushed to main
  pull_request:
    branches:
      - main   # also runs for PRs targeting main

jobs:
  docker:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Set timestamp tag
        id: vars
        run: echo "TAG=$(date +'%m%d%Y%H%M')" >> $GITHUB_ENV

      # ---------- Build & Push Frontend (UI) ----------
      - name: Build frontend image
        run: |
          docker build -t jsrankit/cdm-ui:${{ env.TAG }} -t jsrankit/cdm-ui:latest ./frontend

      - name: Push frontend image
        run: |
          docker push jsrankit/cdm-ui:${{ env.TAG }}
          docker push jsrankit/cdm-ui:latest

      # ---------- Build & Push Backend (Server) ----------
      - name: Build backend image
        run: |
          docker build -t jsrankit/cdm-server:${{ env.TAG }} -t jsrankit/cdm-server:latest ./backend

      - name: Push backend image
        run: |
          docker push jsrankit/cdm-server:${{ env.TAG }}
          docker push jsrankit/cdm-server:latest
